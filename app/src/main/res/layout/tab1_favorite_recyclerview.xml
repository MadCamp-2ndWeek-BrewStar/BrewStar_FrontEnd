<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="5dp"
    android:paddingEnd="10dp">

    <ImageView
        android:id="@+id/favorite_rectangle"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/favorite_rectangle2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_favorite_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="레몬 아샷추 헤헤"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/favorite_rectangle"
        app:layout_constraintStart_toStartOf="@+id/favorite_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/iv_favorite_circle" />

    <TextView
        android:id="@+id/tv_favorite_custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="샷2 + 레몬시럽1 + 복숭아티백+뭐든좋아+음하하하"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="6sp"
        app:layout_constraintBottom_toBottomOf="@+id/favorite_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/favorite_rectangle"
        app:layout_constraintStart_toStartOf="@+id/favorite_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/tv_favorite_name" />

    <ImageView
        android:id="@+id/iv_favorite_circle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/mycustom_circle"
        app:layout_constraintEnd_toEndOf="@+id/favorite_rectangle"
        app:layout_constraintStart_toStartOf="@+id/favorite_rectangle"
        app:layout_constraintTop_toTopOf="@+id/favorite_rectangle" />

    <ImageView
        android:id="@+id/iv_favorite_menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:src="@drawable/coffee"
        app:layout_constraintBottom_toBottomOf="@+id/iv_favorite_circle"
        app:layout_constraintEnd_toEndOf="@+id/iv_favorite_circle"
        app:layout_constraintStart_toStartOf="@+id/iv_favorite_circle"
        app:layout_constraintTop_toTopOf="@+id/iv_favorite_circle" />

    <ImageButton
        android:id="@+id/btn_like"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/like2"
        app:layout_constraintEnd_toEndOf="@+id/favorite_rectangle"
        app:layout_constraintTop_toTopOf="@+id/favorite_rectangle" />


</androidx.constraintlayout.widget.ConstraintLayout>